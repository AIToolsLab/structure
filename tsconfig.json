{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "DOM.Iterable",
            "DOM",
            "ESNext",
            "ESNext.Array",
            "ES2019.Array"
        ],
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "module": "ES2020",
        "rootDir": "./",
        "moduleResolution": "node",
        "paths": {
            "*": ["./src/*.d.ts"],
            "@/*": ["./src/*"]
        },
        "outDir": "./src/build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "removeComments": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}